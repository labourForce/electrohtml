        +shop-element(true,true,'250x232',true,true,true,true,true,true,true)
        +shop-element(true,true,'250x232',true,true,true,true,true,true,true)
        +shop-element(true,true,'250x232',true,true,true,true,true,true,true)
        +shop-element(true,true,'250x232',true,true,true,true,true,true,true)
        +shop-element(true,true,'250x232',true,true,true,true,true,true,true)
        +shop-element(true,true,'250x232',true,true,true,true,true,true,true)
    .shop-footer.items-row
        .shop-footer__show
            .shop-bar__filter
                select
                    option Show 20
                    option Show 50
            .shop-header__result
                | Showing
                span 20
                | of
                span 127
                | results
        .shop-footer__pagination
            button.active-button 1
